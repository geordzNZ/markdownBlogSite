<div class="mb-4">
    <label for="title" class="form-label mx-3">Title</label>
    <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control" >
</div>
<div class="mb-4">
    <label for="description" class="form-label mx-3">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description%></textarea>
</div>
<div>
    <label for="markdown" class="form-label mx-3">Markdown</label>
    <textarea required name="markdown" id="markddown" class="form-control"><%= article.markddown%></textarea>
</div>

<a href="/" class="btn btn-secondary mt-3">Cancel</a>
<button type="submit" class="btn btn-primary mt-3">Save</button>