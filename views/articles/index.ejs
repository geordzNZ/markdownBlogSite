<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Blog Site</title>
</head>
<body class="bg-success p-2 text-dark bg-opacity-25">
    <!-- <h1>Hello from index.ejs</h1> -->
    <div class="container bg-success p-2 text-dark bg-opacity-10 ">
        <h1 class="mb-4 mx-3">Blog Site Articles</Article></h1>
        <a href="/articles/new" class="btn btn-success  ms-3">New Article</a>

        <% articles.forEach(article => { %>
               <div class="card mt-4 mx-3 ps-5">
                <div class="card-body">
                     <h4 class="card-title mb-3"><%= article.title %> </h4>
                     <!-- <div class="card-subtitle text-muted mb-2"><%= article.createdAt.toLocaleDateString() %>  </div> -->
                     <div class="card-subtitle text-muted mb-1"><%= article.createdAt %>  </div>
                     <div class="card-text mb-1"><%= article.description  %>  </div>
                     <a href="articles/<%= article.slug %>" class="btn btn-primary">Read More...</a>
                     <a href="articles/edit/<%= article.id %>" class="btn btn-info">Edit...</a>
                </div>   
           </div>
        <% }) %>


        <!-- <%  articles.forEach(article => { %>

        <% }) %> -->
    </div>
</body>
</html>